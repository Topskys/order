/* pages/collection/collection.wxss */
.collection-warp{
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background-color: var(--theme-bg);
}

.product-item {
    overflow: hidden;
    padding: 20rpx;
    margin: 30rpx;
    background-color: var(--white);
    border-radius: 20rpx;
}
.product-item .rmd-img {
    display: block;
    width: 220rpx;
    height: 220rpx;
    margin-right: 30rpx;
    border-radius: 8rpx;
}
.product-item .description{
    flex: 1;
}
.product-item .description .title{
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.product-item .description .detail{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--grey);
    font-size: var(--fs12);
}
.product-item .description .price {
    color: var(--red);
    font-size:var(--fs12);
}

.product-item .description .price .price-number {
    font-size: var(--fs16);
}

