/* 全局样式 */
page {
    /* colors */
    --mine-bg: #f4f5f5;
    --theme-bg: #f4f5f5;
    --white: #fff;
    --black-light: #333;
    --red: #ee0a24;
    --grey: rgb(201, 208, 211);
    --blue-light: #3ab6f6;
    /* VantUI订制主题 */
    /* --text-color: #323233; */
    /* --border-color: #ebedf0; */
    --active-color: #3ab6f6;
    --background-color: #3ab6f6;
    --background-color-light: #fafafa;
    --tab-active-text-color: #3ab6f6;
    --tabs-bottom-bar-color: #3ab6f6;
    /* --dropdown-menu-title-text-color:#fff; */
    --dropdown-menu-title-text-color: #fff;
    --dropdown-menu-title-active-text-color: #3ab6f6;
    --dropdown-menu-option-active-color: #3ab6f6;
    /* font-size */
    --fs12: 24rpx;
    --fs14: 28rpx;
    --fs16: 32rpx;
    --fs18: 36rpx;
    --fs20: 40rpx;

}

.r-flex {
    display: flex;
}

.r-flex-1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.r-flex-2 {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}

.r-flex-3 {
    display: flex;
    align-items: center;
}

.r-flex-4 {
    display: flex;
    align-items: center;
    justify-content: center;
}



.c-flex-1 {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.c-flex-2 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.c-flex-3 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.no-data {
    text-align: center;
    padding: 40rpx 0;
    color: var(--grey);
    font-size: var(--fs14);
}

.scroll-y {
    width: 100%;
    height: 100vh;
    overflow: hidden;
}