/* pages/detail/detail.wxss */

.detail-content .poster-warp {
    height: 30vh;
    overflow: hidden;
}

.desc-warp {
    /* background-color: aliceblue; */
    background-color: var(--white);
}

.desc-warp .desc-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.activities-warp {
    background-color: var(--white);
}

.activities-warp .activity-item {
    padding: 20rpx 24rpx;
    border-bottom: 1px solid #eee;
}

.notice-warp {
    margin-bottom: 20rpx ;
    color: var(--theme);
    background-color: #eaf0f7;
    box-shadow: -1px -1px 3px var(--border);
}

/* 服务与评价 */
.detail-tabs {
    padding: 20rpx 30rpx;
}

.service-warp {
    box-sizing: border-box;
}

/* 服务评价 */
.comment-warp {
    background-color: var(--white);
    padding: 24rpx;
}

.comment-title {
    padding-bottom: 24rpx;
}

.comment-item {
    padding: 24rpx;
    height: 200rpx;
    box-sizing: border-box;
    border-radius: 16rpx;
}

.avatar-image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.comment-warp .comment-item .comment-content {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 20rpx;
}

/* 服务内容 */
.service-warp {
    margin-top: 20rpx;
    margin-bottom: 100rpx;
    background-color: var(--white);
}

/* popup弹窗 */
.popup-scroll {
    height: 100%;
    overflow: hidden;
    padding: 90rpx 0 30rpx;
    box-sizing: border-box;
}

.select-option {
    padding: 10rpx 24rpx;
    margin: 24rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    border: 1px solid var(--border);
    background-color: #f5f5f7;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
}

.option-active {
    color: var(--black-light);
    font-weight: 500;
    border-color: var(--theme-light);
    background-color: rgb(240, 249, 253);
}



/* 购物导航栏 */
.good-nav-warp {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100vw;
    box-sizing: border-box;
    padding: 20rpx 24rpx 50rpx 24rpx;
    background-color: var(--white);
    border-top: 1px solid var(--border);
    z-index: 999;
}

.good-nav-warp .order-btn {
    padding: 10rpx 50rpx;
    background-color: var(--theme);
    color: var(--white);
    border-radius: 200rpx;
}