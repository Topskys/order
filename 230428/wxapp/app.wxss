/**app.wxss**/

page{
    /* colors */
    --theme:#2d8cf0;
    --theme-1:#335eea;
    --theme-dark:#2d85e4;
    --theme-light:#5cadff;
    --success:#19be6b;
    --warning:#ff9900;
    --error:#ed3f14;
    --title:#1c2438;
    --content:#495060;
    --sub-color:#ed3f14;
    --disabled:#bbbec4;
    --border:#dddee1;
    --divider:#e9eaec;
    --bg:#f8f8f9;
    --black-light:#333;
    --white:#fff;
    --grey:#c9d0d3;
    --red:#ee0a24;
    --goldenrod:#daa520;
    /* vantUI */
    --sidebar-selected-border-color:var(--theme-1);
    --sidebar-selected-text-color:var(--theme-1);
    --tabs-bottom-bar-color:var(--theme-1);
    --dropdown-menu-title-text-color: var(--black-light);
    --dropdown-menu-title-active-text-color: var(--theme-1);
    --dropdown-menu-option-active-color: var(--theme-1);
}

/* flex */
.r-flex {
    display: flex;
}

.r-flex-jcsb {
    display: flex;
    justify-content: space-between;
}

.r-flex-aic {
    display: flex;
    align-items: center;
}
.r-flex-jcsb-aic {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.r-flex-jcc-aic {
    display: flex;
    align-items: center;
    justify-content: center;
}


.c-flex {
    display: flex;
    flex-direction: column;
}

.c-flex-jcsb {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.c-flex-aic {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.c-flex-jcc{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
/* image */
.image{
    display: block;
    width: 100%;
}
/* scroll */
.scroll-y{
    height: 100vh;
    overflow: hidden;
}
/* text-align */
.aic{
    text-align: center;
}
.tar{
    text-align: right;
}
.tac{
    text-align: center;
}


/* font-size */
.fs12{
    font-size: 24rpx;
}
.fs13{
    font-size: 26rpx;
}
.fs14{
