}
.theme-dark{
    color: var(--theme-dark);
}
.success{
    color: var(--success);
}
.warning{
    color: var(--warning);
}
.error{
    color: var(--error);
}
.title{
    color: var(--title);
}
.content{
    color: var(--content);
}
.sub-color{
