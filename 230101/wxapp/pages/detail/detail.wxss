/* pages/roomDetail/room-detail.wxss */
.swiper{
    height: 750rpx;
    height: 400rpx;
}

.swiper .image{
    width: 100%;
    height: 400rpx;
    background-position: center center;
    background-size: cover;
}

.detail-tabbar{
    display: flex;
    align-items: center;
    text-align: center;
    padding: 20rpx;
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    border-top: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
}

.detail-tabbar>view{
    flex: 1;
    border-bottom: 4rpx solid #fff;
}

.detail-tabbar .active{
    border-bottom-color: red;
}

.feature{
    padding: 20rpx;
    line-height: 1.5;
}

.comment{
    padding:  0 30rpx;
    margin: 20rpx 0;
    line-height: 1.5;
    border-bottom:1rpx solid #f5f5f5 ;
    /* 去除浮动 */
    overflow: hidden;
}
.comment .user{
    font-size: 32rpx;
    padding: 10rpx 0;
    border-bottom: 1rpx solid #eee;
}
.comment .content{
    padding: 10rpx;
    font-size: 28rpx;
    opacity: .8;
    border-radius: 10rpx;

    display: -webkit-box;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.comment .createTime{
    /* color: #aaa; */
    opacity: .5;
    font-size: 28rpx;
    float: right;
}

.good-nav{
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    text-align: center;
    color: white;
    width: 100vw;
    border-top: 2rpx solid #eee;
    height: 100rpx;
    line-height: 100rpx;
}

.good-nav>view{
    flex: 1;
}



