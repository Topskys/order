/* pages/home/home.wxss */
swiper {
    width: 750rpx;
    height: 400rpx;
}
.mr5{
    margin-right: 10rpx;
}
.opy5{
    opacity: .5;
}



.hotel-info{
    padding: 0 30rpx;
    margin: 10rpx 0;
    display: flex;
    justify-content: space-between;
}
.hotel-name{
    font-size: 36rpx;
    font-weight: bold;
}
.hotel-address{
    opacity: 0.5;
    font-size: 28rpx;
}

.info-right{
    display: flex;
    align-items: flex-end;
}
.info-right>view{
    color: goldenrod;
    font-size: 28rpx;
    margin: 0 10rpx;
}



.rent{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 30rpx;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
}
/* .rent>view{
    width: 33.33%;
    text-align: center;
} */
.rent-desc{
    opacity: .5;
}


.room{
    margin: 20rpx 25rpx;
    overflow: hidden;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
}
.room-img {
    width: 240rpx;
    height: 160rpx;
    float: left;
    margin-right: 10rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}
.room-info{
    position: relative;
    width: 100%;
    height: 160rpx;
}
.room-info .room-title{
    font-size: 32rpx;
    width: calc(100% - 260rpx);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.room-info .room-desc{
    color:#aaa;
    font-size: 24rpx;
    width: calc(100% - 260rpx);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.room-price{
    position: absolute;
    bottom: 5rpx;
    left: 250rpx;
    width: calc(100% - 250rpx);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.room-price .price-icon{
    font-size: 24rpx;
    color: red;
}

.room-price .price-number{
    font-size: 36rpx;
    color: #ee0a24;
    margin-right: 20rpx;
}

.room-price .prev-price{
    color: #aaa;
    font-size: 28rpx;
    text-decoration: line-through;
}

.room-price .room-order{
    color: #fff;
    font-size: 28rpx;
    padding: 5rpx 20rpx;
    background: darkorange;
    border-radius: 5rpx;
}
.selections{
    padding: 5rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.selections .select{
    color: rgba(69, 90, 100, 0.6);
    font-size: 30rpx;
}
.van-dropdown-menu{
    height: 30px !important;
    box-shadow: none !important;
}
.van-dropdown-menu__title{
    color: rgba(69, 90, 100, 0.6) !important;
}

.noMore{
    text-align: center;
    font-size: 28rpx;
}